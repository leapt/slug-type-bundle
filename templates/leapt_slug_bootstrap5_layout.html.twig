        class="input-group"
        data-controller="leapt-slug"
        data-leapt-slug-target-value="{{ form.parent.children[target].vars.id }}"
        data-leapt-slug-alert-message-value="{{ 'alert_message'|trans({}, 'LeaptSlugType') }}"
    >
        {{ block('form_widget') }}
        <button class="btn btn-outline-secondary" type="button" data-leapt-slug-target="button">
            &#128274;
        </button>
    </div>
{%- endblock %}
