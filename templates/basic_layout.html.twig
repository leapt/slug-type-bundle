{% block leapt_slug_widget -%}
    {% set base_stimulus_name = 'leapt--slug-type-bundle--slug' %}
    <div
        class="leapt-slug-input-group"
        {{ stimulus_controller('leapt/slug-type-bundle/slug', {
            target: form.parent.children[target].vars.id,
            alertMessage: 'alert_message'|trans({}, 'LeaptSlugType'),
            lockedIcon: locked_icon,
            unlockedIcon: unlocked_icon,
        }) }}
    >
        {{ block('form_widget') }}
        <button type="button" data-{{ base_stimulus_name }}-target="button" class="{{ button_class|default('') }}">
            {{ locked_icon|raw }}
        </button>
    </div>
{%- endblock %}
